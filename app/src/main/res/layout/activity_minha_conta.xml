<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_minha_conta_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7FB"
    tools:context=".ActivityMinhaConta">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/layoutHeaderMinhaConta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#3D5AFE"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvHeaderTitleMinhaConta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Minha Conta"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_lock_power_off"
            android:contentDescription="Logout"
            app:tint="@color/white" />

    </LinearLayout>

    <!-- DIVISOR HEADER -->
    <View
        android:id="@+id/dividerHeaderMinhaConta"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/layoutHeaderMinhaConta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CONTEÚDO -->
    <ScrollView
        android:id="@+id/scrollMinhaConta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/dividerHeaderMinhaConta"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationMinhaConta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CARD INFO USUÁRIO -->
            <LinearLayout
                android:id="@+id/cardInfoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvTituloInfoUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informações do usuário"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvNomeUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome: -"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvEmailUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-mail: -"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvMatriculaUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Matrícula: -"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvMembroDesde"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Membro desde: -"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvQtdEmprestimos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empréstimos realizados: 0"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvQtdFavoritos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favoritos: 0"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- CARD CONFIGURAÇÕES -->
            <LinearLayout
                android:id="@+id/cardConfiguracoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tvTituloConfiguracoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configurações"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <!-- Tamanho da fonte -->
                <TextView
                    android:id="@+id/tvLabelTamanhoFonte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tamanho da fonte"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

                <Spinner
                    android:id="@+id/spinnerTamanhoFonte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>

                <!-- Contraste -->
                <TextView
                    android:id="@+id/tvLabelContraste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contraste de cores"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"/>

                <Spinner
                    android:id="@+id/spinnerContraste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>

                <!-- Notificações -->
                <LinearLayout
                    android:id="@+id/layoutNotificacoes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/tvLabelNotificacoes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Notificações locais"
                        android:textSize="14sp"
                        android:layout_weight="1"/>

                    <Switch
                        android:id="@+id/switchNotificacoes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!-- SEÇÃO FAVORITOS -->
            <TextView
                android:id="@+id/tvTituloFavoritos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favoritos"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvSemFavoritos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Você ainda não possui livros favoritos."
                android:textSize="14sp"
                android:textColor="#7A7F8C"
                android:visibility="gone"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFavoritos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:nestedScrollingEnabled="false"/>
        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAVIGATION -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationMinhaConta"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/menu_bottom_navigation"
        app:labelVisibilityMode="labeled" />

</androidx.constraintlayout.widget.ConstraintLayout>