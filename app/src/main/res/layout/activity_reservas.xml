<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reservas_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7FB"
    tools:context=".ActivityReservas">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/layoutHeaderReservas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#3D5AFE"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTituloReservas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minhas Reservas"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/tvFiltroStatusReserva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Todos"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMinhasMultas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Minhas multas"
                android:textAllCaps="false"
                style="@style/Widget.Material3.Button.TextButton"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>

    <!-- CARREGANDO -->
    <TextView
        android:id="@+id/tvCarregandoReservas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carregando reservas..."
        android:textSize="12sp"
        android:textColor="#7A7F8C"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layoutHeaderReservas"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- SEM RESULTADOS -->
    <TextView
        android:id="@+id/tvSemReservas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nenhuma reserva encontrada."
        android:textColor="#7A7F8C"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvCarregandoReservas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- LISTA -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvReservas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvCarregandoReservas"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationReservas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_reserva"/>

    <!-- BOTTOM NAVIGATION -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationReservas"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/menu_bottom_navigation"
        app:labelVisibilityMode="labeled" />

</androidx.constraintlayout.widget.ConstraintLayout>