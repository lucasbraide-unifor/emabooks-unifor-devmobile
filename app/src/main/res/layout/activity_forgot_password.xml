<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F6F7FB"
    tools:context=".ActivityForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="6dp"
            android:background="#FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <!-- Ícone -->
            <ImageView
                android:id="@+id/ivMail"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:src="@android:drawable/ic_dialog_email"
                android:contentDescription="Ícone e-mail"
                android:layout_marginBottom="12dp" />

            <!-- Título -->
            <TextView
                android:id="@+id/tvForgotTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Esqueci a Senha"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tvForgotSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digite seu e-mail para receber o link de recuperação"
                android:textSize="14sp"
                android:textColor="#7A7F8C"
                android:gravity="center"
                android:layout_marginBottom="20dp" />

            <!-- Label E-mail -->
            <TextView
                android:id="@+id/tvEmailLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-mail"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <!-- Campo E-mail -->
            <EditText
                android:id="@+id/etForgotEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="seu@email.com"
                android:inputType="textEmailAddress"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:background="@android:drawable/edit_text" />

            <!-- Mensagem de erro (validação/API) -->
            <TextView
                android:id="@+id/tvForgotError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-mail não encontrado"
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"
                android:layout_marginTop="8dp" />

            <!-- Botão Enviar Link -->
            <Button
                android:id="@+id/btnSendResetLink"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Enviar Link"
                android:textAllCaps="false"
                android:backgroundTint="#3D5AFE"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp" />

            <!-- Voltar para login -->
            <TextView
                android:id="@+id/tvBackToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fazer login"
                android:textStyle="bold"
                android:textColor="#2F3AAE"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>