<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootAdminAcervo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F7F8"
    tools:context=".ActivityAdminAcervo">

    <!-- TOOLBAR -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAcervoAdmin"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#10172B"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:title="Gerenciar acervo"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@android:drawable/ic_menu_revert"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollViewAcervo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbarAcervoAdmin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/layoutAcervoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- BUSCA -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSearchAcervo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:id="@+id/iconSearchAcervo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="#9CA3AF" />

                    <EditText
                        android:id="@+id/etBuscaAcervo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="Buscar por título ou autor..."
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#111827"
                        android:textColorHint="#9CA3AF"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- AÇÕES -->
            <LinearLayout
                android:id="@+id/layoutAcoesAcervo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonAdicionarLivro"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="+ Adicionar livro"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:backgroundTint="#10172B"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- QUANTIDADE -->
            <TextView
                android:id="@+id/textViewQtdLivros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="0 livro(s) encontrado(s)"
                android:textColor="#6B7280"
                android:textSize="13sp" />

            <!-- LISTA -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLivrosAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginTop="8dp" />

            <!-- PAGINAÇÃO (placeholder) -->
            <LinearLayout
                android:id="@+id/layoutPaginacaoAcervo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPaginaAnterior"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Anterior"
                    android:textAllCaps="false"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textPaginaInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Página 1"
                    android:textColor="#6B7280"
                    android:textSize="13sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPaginaProxima"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Próxima"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:backgroundTint="#10172B"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>