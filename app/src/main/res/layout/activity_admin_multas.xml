<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootAdminMultas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAdminMultas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        app:navigationIcon="@android:drawable/ic_menu_revert"
        app:title="Multas"
        app:titleTextColor="?attr/colorOnSurface" />

    <LinearLayout
        android:id="@+id/containerAdminMultas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- Filtros / busca -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etBuscaMultaUsuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Buscar por usuÃ¡rio"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:inputType="text"
                android:padding="8dp"
                android:background="@android:drawable/edit_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBuscarMulta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Buscar" />
        </LinearLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchApenasPendentes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mostrar apenas pendentes" />

        <!-- Lista -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMultas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvListaMultasVazia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nenhuma multa encontrada."
            android:gravity="center"
            android:visibility="gone"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNovaMulta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:contentDescription="Aplicar multa"
        app:srcCompat="@android:drawable/ic_input_add" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>