<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F6F7FB"
    tools:context=".ActivityResetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="24dp">

        <!-- Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="6dp"
            android:background="#FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <!-- Ícone sucesso -->
            <ImageView
                android:id="@+id/ivOk"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:src="@android:drawable/checkbox_on_background"
                android:contentDescription="Link aceito"
                android:layout_marginBottom="12dp" />

            <!-- Título -->
            <TextView
                android:id="@+id/tvResetTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nova Senha"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tvResetSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Link aceito. Agora defina sua nova senha"
                android:textSize="14sp"
                android:textColor="#7A7F8C"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Label Nova Senha -->
            <TextView
                android:id="@+id/tvNewPassLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nova senha (mín. 6 caracteres)"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <!-- Campo Nova Senha -->
            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nova senha"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawableEnd="@android:drawable/ic_menu_view"
                android:drawablePadding="8dp"
                android:background="@android:drawable/edit_text" />

            <!-- Label Confirmar -->
            <TextView
                android:id="@+id/tvConfirmLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmar nova senha"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="6dp" />

            <!-- Campo Confirmar -->
            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Confirmar a nova senha"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:drawableEnd="@android:drawable/ic_menu_view"
                android:drawablePadding="8dp"
                android:background="@android:drawable/edit_text" />

            <!-- Bloco de erros (cada um controlado no código) -->
            <LinearLayout
                android:id="@+id/llErrors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/tvErrorFillAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preencha todos os campos"
                    android:textColor="@android:color/holo_red_dark"
                    android:visibility="gone"
                    tools:visibility="gone" />

                <TextView
                    android:id="@+id/tvErrorMinChars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A senha deve ter ao menos 6 caracteres"
                    android:textColor="@android:color/holo_red_dark"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvErrorNotMatch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="As senhas não coincidem"
                    android:textColor="@android:color/holo_red_dark"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Botão Confirmar -->
            <Button
                android:id="@+id/btnSaveNewPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Salvar Nova Senha"
                android:textAllCaps="false"
                android:backgroundTint="#32A05F"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>