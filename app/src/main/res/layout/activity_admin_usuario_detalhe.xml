<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    tools:context=".ActivityAdminUsuarioDetalhe">

    <!-- TOOLBAR -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarAdminUsuarioDetalhe"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#0F172A"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:title="Detalhes do usuário"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@android:drawable/ic_menu_revert"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- CONTEÚDO -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarAdminUsuarioDetalhe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD DETALHES -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Nome -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nome completo"
                        android:textColor="#4B5563"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvNomeValor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#111827"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />

                    <!-- Email -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="E-mail"
                        android:textColor="#4B5563"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvEmailValor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <!-- Matrícula -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Matrícula"
                        android:textColor="#4B5563"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvMatriculaValor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <!-- Papel -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Papel"
                        android:textColor="#4B5563"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvPapelValor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <!-- Status -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Status"
                        android:textColor="#4B5563"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvStatusValor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <!-- Criado em -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Criado em"
                        android:textColor="#4B5563"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvCriadoEmValor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <!-- Atualizado em -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Atualizado em"
                        android:textColor="#4B5563"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvAtualizadoEmValor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#111827"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- BOTÕES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonExcluirUsuario"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Excluir"
                    android:textAllCaps="false"
                    android:textSize="13sp" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonEditarUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="#0F172A"
                    android:text="Editar"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>